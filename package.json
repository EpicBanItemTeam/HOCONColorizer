{
	"name": "hocon-colorizer",
	"displayName": "HOCON Colorizer",
	"description": "Language Syntax Highlighting of HOCON",
	"version": "0.3.0",
	"publisher": "zzzz",
	"engines": {
		"vscode": "^1.43.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ustc-zzzz/hocon-colorizer.git"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:hocon"
	],
	"main": "./out/client/hocon.extension.js",
	"contributes": {
		"commands": [
			{
				"command": "hocon-colorizer.helloWorld",
				"title": "Hello World"
			}
		],
		"languages": [
			{
				"id": "hocon",
				"extensions": [
					".conf"
				],
				"aliases": [
					"HOCON",
					"hocon"
				],
				"configuration": "./src/syntax/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "hocon",
				"scopeName": "source.hocon",
				"path": "./src/syntax/hocon.tmLanguage.json"
			},
			{
				"scopeName": "markdown.hocon.codeblock",
				"path": "./src/syntax/markdown.tmLanguage.json",
				"injectTo": [
					"text.html.markdown"
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"compile": "tsc -p ./"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"vscode-languageclient": "^6.1.3",
		"vscode-languageserver": "^6.1.1",
		"vscode-languageserver-textdocument": "^1.0.1",
		"typescript-parsec": "^0.3.1"
	}
}
